<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", class: "form-control", rows: 8 %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary w-100 mt-2" %>
<% end %>