<% provide(:title, "Password Reset") %>
<section class="container my-4">
<h2 class="text-center display-2">Password reset</h2>
<%= form_for(:password_reset, url: password_resets_path) do | form | %>
  <div class="form-group">
    <%= form.label :email, "Email address"%>
    <%= form.email_field :email, class: "form-control", id: "user_email", placeholder: "Enter your registered email to reset password" %>
  </div>
  <%= form.submit "Reset", class: "btn btn-primary w-100" %>
<% end %>
</section>
