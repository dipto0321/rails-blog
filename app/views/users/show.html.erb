<% provide(:title, @user.name) %>
<div class="row my-2">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <aside class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <hr>
      <ol class="list-group">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, previous_label: '&laquo;', next_label: '&raquo;', list_classes: %w(pagination justify-content-center) %>
    <% end %>
  </aside>
</div>